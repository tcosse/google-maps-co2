<div data-controller='upload' class='w-full'>
  <input type="file" id="takout-file" data-upload-target='file' data-action='input->upload#fileLoaded'>
  <div class="chart-container" style="position: relative; height: 80vh">
    <canvas id="myChart" data-upload-target="chart" data-action='click->upload#clickHandler'></canvas>
  </div>
  <!-- Table -->

  <div class="flex flex-col" data-upload-target='table'>
    <div class="overflow-x-auto mx-0.5">
      <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          <table class="min-w-full">
            <thead class="bg-white border-b" >
              <tr data-upload-target='tableHeaderRow'></tr>
            </thead>
            <tbody data-upload-target='tableBody'>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
